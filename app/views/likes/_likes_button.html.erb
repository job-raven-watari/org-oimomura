<% if current_user.liking?(review) %>
  <%= form_for(current_user.likes.find_by(review_id: review.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :review_id, review.id %>
    <span class="glyphicon glyphicon-heart" aria-hidden="true"><%= f.submit "イモ惚れ（お気に入り）を外す", class: "btn btn-default btn-xs" %></span>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= hidden_field_tag :review_id, review.id %>
    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"><%= f.submit "イモ惚れ（お気に入り）する", class: "btn btn-danger btn-xs" %></span>
  <% end %>
<% end %>